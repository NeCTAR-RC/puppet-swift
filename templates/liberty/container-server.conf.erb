[DEFAULT]
bind_ip = 0.0.0.0
bind_port = 6001
workers = <%= @workers %>
set log_level = WARN
log_level = WARN
<%- if @allow_versions -%>
allow_versions = true
<%- end -%>

[pipeline:main]
pipeline = recon container-server versioned_writes

[app:container-server]
use = egg:swift#container

[container-replicator]

[container-updater]

[container-auditor]

[filter:recon]
use = egg:swift#recon
recon_cache_path = /var/cache/swift

[filter:versioned_writes]
use = egg:swift#versioned_writes
allow_versioned_writes = true
